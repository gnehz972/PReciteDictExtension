{
  "manifest_version": 2,
  "name": "P词典",
  "description": "P词典(Personal Recite Dict),可添加生词本的英语辞典",
  "permissions": [
    "tabs",
    "contextMenus",
    "*://*/*"
  ],
  "version": "1.4",
  "icons": {
    "16": "assets/logo_16.png",
    "32": "assets/logo_32.png",
    "48": "assets/logo_48.png",
    "128": "assets/logo_128.png"
  },
  "browser_action": {
    "default_icon": {
      "16": "assets/logo_16.png",
      "32": "assets/logo_32.png",
      "48": "assets/logo_48.png",
      "128": "assets/logo_128.png"
    },
    "default_popup": "pages/popup.html"
  },
  "background": {
    "scripts": [
      "src/zepto.min.js",
      "src/oop.js",
      "src/dict.js",
      "src/background.js"
    ],
    "persistent": true
  },
  "options_page": "pages/options.html"
}
